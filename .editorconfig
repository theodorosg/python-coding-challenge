root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# 4 space indentation for Python files
[*.py]
indent_size = 4

# Makefiles always use tabs for recipe indentation
[{Makefile,*.mak,*.mk}]
indent_style = tab
